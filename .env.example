# Environment Configuration
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:7432/whatsapp_bot

# Redis
REDIS_URL=redis://localhost:7379

# WhatsApp/Baileys
SESSION_PATH=./sessions
MESSAGE_PROVIDER=baileys

# Logging
LOG_LEVEL=info

# Server
PORT=7100

# Dashboard URL (for generating links - leave empty for auto-detection in development)
DASHBOARD_URL=

# OpenAI API (for NLP features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API (REQUIRED for Ensemble AI)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API (REQUIRED for Ensemble AI)
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
