{
  "name": "whatsapp-assistant-bot",
  "version": "0.1.0",
  "description": "A Hebrew-first WhatsApp bot for managing events, reminders, and messages",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "pkill -9 -f 'node.*dist/index' 2>/dev/null; pkill -9 -f 'nodemon' 2>/dev/null; pkill -9 -f 'ts-node' 2>/dev/null; redis-cli DEL bot:instance:lock >/dev/null 2>&1; sleep 2 && nodemon --exec node --loader ts-node/esm src/index.ts",
    "build": "tsc && mkdir -p dist/templates && cp src/templates/*.html dist/templates/",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:bugs": "ts-node --esm src/testing/test-bug-fixes.ts",
    "test:simulator": "ts-node --esm src/testing/MessageSimulator.ts",
    "test:morning-summary": "node dist/testing/test-morning-summary.js",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:headed": "playwright test --headed",
    "test:nlp": "ts-node src/test-nlp.ts",
    "test:conversations": "tsx run-test-conversations.ts",
    "test:hebrew-qa": "tsx run-hebrew-qa-conversations.ts",
    "test:hebrew-qa:high": "tsx run-hebrew-qa-conversations.ts --priority high",
    "test:hebrew-qa:category": "tsx run-hebrew-qa-conversations.ts --category",
    "qa": "npm run build && node dist/testing/qa-runner.js",
    "qa:dev": "tsx src/testing/qa-runner.ts",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "type-check": "tsc --noEmit",
    "backup:db": "bash scripts/backup-database.sh",
    "restore:db": "bash scripts/restore-database.sh"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "assistant",
    "baileys",
    "hebrew",
    "calendar"
  ],
  "author": "Michael Mishaev",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@google/generative-ai": "^0.24.1",
    "@hapi/boom": "^10.0.1",
    "@hebcal/core": "^5.4.0",
    "@types/qrcode": "^1.5.5",
    "@whiskeysockets/baileys": "^6.7.19",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.28.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "ioredis": "^5.4.2",
    "luxon": "^3.5.0",
    "openai": "^6.0.1",
    "pg": "^8.13.1",
    "puppeteer": "^24.24.1",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "rrule": "^2.8.1",
    "whatsapp-web.js": "^1.34.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/qrcode-terminal": "^0.12.2",
    "botium-connector-webdriverio": "^0.4.2",
    "botium-core": "^1.15.6",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.9.0",
    "nodemon": "^3.1.9",
    "playwright": "^1.56.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
